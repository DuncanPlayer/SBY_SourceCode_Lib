<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <!--  <baseDirectory>./</baseDirectory>  -->
    <includeBaseDirectory>true</includeBaseDirectory>
    <id>${project.version}</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target/mblog/bin</directory>
            <includes>
                <include>*</include>
            </includes>
            <lineEnding>unix</lineEnding>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/mblog/conf</directory>
            <includes>
                <include>*/</include>
            </includes>
            <outputDirectory>conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/mblog/</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>./lib</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
       <dependencySet>
       	   <scope>compile</scope>
           <outputDirectory>./lib</outputDirectory>
           <includes>
           	 <include>com.mtons.mblog:*</include>
           </includes>
       </dependencySet>
    </dependencySets>
</assembly>